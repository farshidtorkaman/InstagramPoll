
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


    <form asp-action="Index">
        <span class="text text-danger">@ViewData["ErrorMessage"]</span>
        <div class="form-group">
            <label for="username">نام کاربری</label>
            <input type="text" class="form-control" id="username" name="username" value="@ViewData["Username"]">
            <span id="username" class="text text-danger"></span>
        </div>
        <div class="form-group">
            <label for="password">رمز عبور</label>
            <input type="password" class="form-control" id="password" name="password" value="@ViewData["Password"]">
            <span id="password" class="text text-danger"></span>
        </div>
        <button type="submit" id="btnSubmit" class="btn btn-success mt-0">ورود </button>

    </form>


